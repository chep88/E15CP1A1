  </div>

  <div class="field">
    <%= form.label :password, class: "control-label" %>
    <%= form.password_field :password, id: :user_password, class: "form-control"%>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-default" %>
  </div>
<% end %>
</div>
